<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/button_cafe"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/google"
                android:layout_marginLeft="33dp"
                android:layout_marginRight="33dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp" />
            <TextView
                android:layout_width="1dp"
                android:layout_height="44dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/button_cafe"
                android:background="#f00"/>

            <TextView
                android:layout_width="70dp"
                android:layout_height="1dp"
                android:layout_alignBottom="@+id/button_cafe"
                android:layout_marginBottom="-16dp"
                android:layout_centerHorizontal="true"
                android:background="#f00"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/button_menu"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/google"
                android:layout_marginLeft="33dp"
                android:layout_marginRight="33dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="44dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/button_menu"
                android:background="#f00"/>

            <TextView
                android:layout_width="70dp"
                android:layout_height="1dp"
                android:layout_alignBottom="@+id/button_menu"
                android:layout_marginBottom="-16dp"
                android:layout_centerHorizontal="true"
                android:background="#f00"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/button_time"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/google"
                android:layout_marginLeft="33dp"
                android:layout_marginRight="33dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="44dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/button_time"
                android:background="#f00"/>

            <TextView
                android:layout_width="70dp"
                android:layout_height="1dp"
                android:layout_alignBottom="@+id/button_time"
                android:layout_marginBottom="-16dp"
                android:layout_centerHorizontal="true"
                android:background="#f00"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/button_order"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/google"
                android:layout_marginLeft="33dp"
                android:layout_marginRight="33dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp" />


            <TextView
                android:layout_width="70dp"
                android:layout_height="1dp"
                android:layout_alignBottom="@+id/button_order"
                android:layout_marginBottom="-16dp"
                android:layout_centerHorizontal="true"
                android:background="#f00"/>

        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/search"
        android:layout_below="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/google"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Сортувати меню"
                android:textColor="#30000000"
                android:textSize="14sp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/line"
        android:layout_below="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#12000000" />

    <ListView
        android:id="@+id/list_of_menu"
        android:layout_below="@+id/line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></ListView>

</RelativeLayout>